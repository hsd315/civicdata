dependencies:
    crime: spotcrime.com-us_crime_incidents-orig-7ba4
    lamps: sangis.org-street_lights-orig-7ba4-street_lights
extracts:
    counts:
        bin_scale: 5000
        description: Crime counts, in an HDF5 file. The file contains two datasets
            in the 'counts' groups, one for violent crime and one for property crime.
            Each number represents the number of reported crimes of the type in and
            area 1/{bin_scale} degrees in size, with a bounding box of ({min_lat},{min_lon}),({max_lat},{max_lon}).
            These values are also embedded as attributes of each dataset.
        each:
        -   filetitle: violent
            title_s: 'Violent: Assaults and Shooting'
            where: AND type in ('Assault', 'Shooting')
        -   filetitle: property
            title_s: 'Property: Theft, Burglary, Robbery and Vandalism'
            where: 'AND type in (''Theft'', ''Burglary'', ''Robbery'', ''Vandalism'',
                ''Arson'') '
        function: extract_array
        max_lat: 33.005209
        max_lon: -117.05658
        min_lat: 32.004009
        min_lon: -117.601255
        name: crime.h5
        query: select  date, time, type, latitude, longitude from incidents where
            latitude > {min_lat} and latitude < {max_lat} and longitude > {min_lon}
            and longitude < {max_lon} {where}
        title: Crime Map, {title_s}
        x-max_lat: 33.47551
        x-max_lon: -116.107189
    geotiffs:
        depends:
        - counts
        description: A grayscale GeoTIFF  heatmap of {filetitle} crime in the San
            Diego area. It is intended for loading into a GIS program, and won't be
            useful in a general image viewer.
        each:
        -   filetitle: violent
            title_s: 'Violent: Assaults and Shooting'
            where: AND type in ('Assault', 'Shooting')
        -   filetitle: property
            title_s: 'Property: Theft, Burglary, Robbery and Vandalism'
            where: 'AND type in (''Theft'', ''Burglary'', ''Robbery'', ''Vandalism'',
                ''Arson'') '
        function: extract_image
        max_lat: 33.47551
        max_lon: -116.107189
        min_lat: 32.004009
        min_lon: -117.601255
        name: sandiego-{filetitle}-crime.tiff
        query: select  date, time, type, latitude, longitude from incidents where
            latitude > {min_lat} and latitude < {max_lat} and longitude > {min_lon}
            and longitude < {max_lon} {where}
        title: Crime Map, {title_s}
        x-max_lat: 33.005209
        x-max_lon: -117.05658
